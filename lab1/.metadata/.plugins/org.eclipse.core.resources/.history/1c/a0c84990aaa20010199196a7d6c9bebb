#include "button_driver.h"
#include "stm32f4xx_hal.h"

#define BUTTON_GPIO_PORT GPIOC
#define BUTTON_GPIO_PIN  GPIO_PIN_15

static bool last_state = false;
static bool was_pressed = false;

void BUTTON_Init(void) {
    __HAL_RCC_GPIOC_CLK_ENABLE();
    GPIO_InitTypeDef GPIO_InitStruct = {0};
    GPIO_InitStruct.Pin = BUTTON_GPIO_PIN;
    GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
    GPIO_InitStruct.Pull = GPIO_PULLUP;  // подтяжка вверх!
    HAL_GPIO_Init(BUTTON_GPIO_PORT, &GPIO_InitStruct);
}

void BUTTON_Process(void) {
    GPIO_PinState state = HAL_GPIO_ReadPin(BUTTON_GPIO_PORT, BUTTON_GPIO_PIN);
    bool pressed = (state == GPIO_PIN_RESET); // кнопка нажата при LOW

    if (pressed && !last_state) {
        was_pressed = true; // детект нажатия
    }
    last_state = pressed;
}

bool BUTTON_WasPressed(void) {
    if (was_pressed) {
        was_pressed = false;
        return true;
    }
    return false;
}
